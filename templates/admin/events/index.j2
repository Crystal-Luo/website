{% extends "layout.j2" %}
{% block title %}Events{% endblock %}

{% block content %}
    <div class="section">
        <div class="container">
            <div class="page-header">
                <div style="float: right;">
                    <a href="{{ url_for("admin.events_new") }}" class="btn btn-success"><i class="fa fa-fw fa-plus"></i> New Event</a>
                </div>
                <h1>Events</h1>
            </div>
            {% if events %}
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Published?</th>
                            <th>Date/Time</th>
                            <th>Location</th>
                            <th>Registration Link</th>
                            <th>Quick Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                            <tr>
                                <td><a href="{{ url_for("admin.events_edit", id=event.id) }}">{{ event.id }}</a></td>
                                <td>{{ event.name }}</td>
                                <td>{{ event.published }}</td>
                                <td>{{ event.start_time }}</td>
                                <td>{{ event.location }}</td>
                                <td>
                                    <a href="{{ event.registration_link }}">Link</a>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-xs btn-default dropdown-toggle" type="button" id="userQuickActions{{ event.id }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            Quick Actions
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="userQuickActions{{ event.id }}">
                                            <li>
                                                <a href="{{ url_for("admin.events_edit", id=event.id) }}">Edit Details</a>
                                                <a href="{{ url_for("admin.events_delete", id=event.id) }}" style="color: #F00;">Delete</a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="jumbotron">
                    <center>
                        No events found! Click the button at the top right to create a new event!
                    </center>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}