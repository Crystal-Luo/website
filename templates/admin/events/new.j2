{% from "templates.j2" import render_field, render_generic_field %}
{% extends "layout.j2" %}
{% block title %}Create New Event{% endblock %}

{% block content %}
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">Create New Event</h2>
                        </div>
                        <div class="list-group">
                            <div class="list-group-item">
                                <form method="POST">
                                    {{ new_event_form.csrf_token }}
                                    <fieldset>
                                        {{ render_field(new_event_form.name) }}
                                    </fieldset>
                                    {{ new_event_form.submit(class_="btn btn-success") }}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}