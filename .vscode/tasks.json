{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Update Migrations",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceRoot}/manage.py",
                "db",
                "migrate"
            ],
            "options": {
                "env": {
                    "DATABASE_URL": "sqlite:///${workspaceRoot}/sase.db",
                    "SECRET_KEY": "wubba lubba dub dub"
                }
            }
        },
        {
            "taskName": "Run Migrations",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceRoot}/manage.py",
                "db",
                "upgrade"
            ],
            "options": {
                "env": {
                    "DATABASE_URL": "sqlite:///${workspaceRoot}/sase.db",
                    "SECRET_KEY": "wubba lubba dub dub"
                }
            }
        }
    ]
}